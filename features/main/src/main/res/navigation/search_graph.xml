<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/search_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.haraev.main.presentation.search.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popUpTo="@id/searchFragment"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.haraev.main.presentation.moviedetails.MovieDetailsFragment"
        android:label="MovieDetailsFragment" >
        <argument
            android:name="movieTitle"
            app:argType="string" />
        <argument
            android:name="moviePosterPath"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="movieOverview"
            app:argType="string" />
        <argument
            android:name="movieReleaseDate"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="movieOriginalTitle"
            app:argType="string" />
        <argument android:name="movieVoteCount"
            app:argType="integer" />
        <argument
            android:name="movieVoteAverage"
            app:argType="float" />
        <argument
            android:name="movieGenres"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="movieDuration"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>